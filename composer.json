{
    "name": "tohsakarat/post-camera",
    "description": "An extension of flarum, allow user to save the screen shot of posts. Different from existing screenshot extension, it can save screenshot of sigle post instead of the whole discussion.",
    "type": "flarum-extension",
    "keywords": ["flarum","extension","images","screen shoot"],
    "license": "MIT",
    "authors": [
        {
            "name": "tohsakarat",
            "email": "tohsakarat@github.com"
        }
    ],
    "support": {
        "issues": "https://github.com/tohsakrat/post-camera/tree/issues",
        "source": "https://github.com/tohsakrat/post-camera/"
        
    },
    "require": {
        "flarum/core": "^1.2.0"
    },
    "autoload": {
        "psr-4": {
            "tohsakarat\\post-camera\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Post-Camera",
            "category": "feature",
            "icon": {
                "name": "fas fa-camera",
                "backgroundColor": "#00c8b0",
                "color": "#fff"
            }
        }
    }
}
